<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mindful - Home</title>
    <link rel="stylesheet" href="css/style.css">
    
</head>
<body>
    <div class='header'>
        <h1>mindful</h1>    
        <h2>Notes</h2>
    </div>
  <div class="notesContainer" id="app">

    
<div class='createNoteTable'>
    <form action="/notes/createNote" method='POST'>
        <input type="text" placeholder="Enter Title" name="noteTitle"><br>
        <input type="text" placeholder="Enter Note" name ="noteBody" class='noteBody'>
        <input type="submit" value="Create Note">
    </form>
</div>        

    <div class="notesList">
    
            <ul> 
                <% notes.forEach(el => { %>
                <div class = "noteDisplay" data-id='<%=el._id%>'>
                    <span class="noteTitle"> 
                        <%= el.title %>
                        </span>
                        <span class="noteBodyDisplay">
                    <%= el.body %> </span>
                    <span class ='del'> Delete </span>
                 </div>
                <% }) %>.
            </ul>
    </div>
</div>
<section>
   
        
</section>

   <div class="logout">
    <a href="/logout">Logout</a>
</div>



    <script src="js/main.js"></script>
</body>
</html>